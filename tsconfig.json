{
  "compilerOptions": {
    "outDir": "dist/",
    "module": "es6",
    "target": "es5",
    "lib": [
      "es6",
      "dom",
    ],
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src/",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "declaration": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "webpack",
  ]
}
